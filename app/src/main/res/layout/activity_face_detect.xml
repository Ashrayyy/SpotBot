<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaceDetectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Name"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:gravity="center"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/dialBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dial Person!"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/originalIv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/messi"
            android:adjustViewBounds="true"/>

        <Button
            android:id="@+id/detectFaceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detect Face"
            tools:ignore="SpeakableTextPresentCheck" />
        <Button
            android:id="@+id/selectBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            tools:ignore="SpeakableTextPresentCheck" />
        <Button
            android:id="@+id/recogniseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recognize Face"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/croppedIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rsltTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

</ScrollView>